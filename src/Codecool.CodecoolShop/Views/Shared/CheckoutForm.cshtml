@{
    ViewData["Title"] = "Checkout Cart";
}




<form class="row g-3" novalidate id="checkout-form">
        <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-md-6">
            <p>Please fill in the form: </p>
        </div>
        
        <div class="col-12">
            <label for="name_input">Name</label><br>
            <input id="name_input" class="form-control" type="text" name="Name" required>
        </div>
        <div class="col-md-6">
            <label for="email_input">E-mail</label>
            <input id="email_input" class="form-control" type="email" name="email" required>
        </div>
        <div class="col-md-6">
            <label for="phone_input">Phone number (like +36 70 1234567)</label>
            <input id="phone_input" class="form-control" type="tel" name="phone" pattern="\+[0-9]{2} [0-9]{2} [0-9]{7}" required>
        </div>
        <div class="col-12">
            <h3>Billing Address</h3>
        </div>
        <div class="col-12">
            <label for="address_input">Address</label>
            <input id="address_input" class="form-control" type="text" name="address" required>
        </div>
            
            <div class="col-6">
                <label for="country_input">Country</label>
                <input id="country_input" class="form-control" type="text" name="country" required>
            </div>
            <div class="col-6">
                <label for="city_input">City</label>
                <input id="city_input" class="form-control" type="text" name="city" required>
            </div>
            <div class="col-md-3">
                <label for="zipcode_input">Zipcode</label>
                <input id="zipcode_input" class="form-control" type="text" name="zip" required>
            </div>
        <div class="col-12">
            <h3>Shipping Address</h3>
        </div>
        <div class="col-12">
             <label for="ship_address_input">Address</label>
             <input id="ship_address_input" class="form-control" type="text" name="ship_address" required>
        </div>
                    
                    <div class="col-md-6">
                        <label for="ship_country_input">Country</label>
                        <input id="ship_country_input" class="form-control" type="text" name="ship_country" required>
                    </div>
                    <div class="col-md-6">
                        <label for="ship_city_input">City</label>
                        <input id="ship_city_input" class="form-control" type="text" name="ship_city" required>
                    </div>
                    <div class="col-md-3">
                        <label for="ship_zipcode_input">Zipcode</label>
                        <input id="ship_zipcode_input" class="form-control" type="text" name="ship_zip" required>
                    </div>
        <button id="payment" >Go to Payment</button><br>
    </form>

/*asp-controller="Order" asp-action="PaymentForm"*/