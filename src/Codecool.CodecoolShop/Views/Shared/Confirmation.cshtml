
@{
    ViewBag.Title = "Confirmation";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>
<h3>We've received your order with the following details</h3>
<table class="table">
	<thead class="thead-dark">
	<tr>
		<th scope="col"></th>
		<th scope="col">Product Name</th>
		<th scope="col">Quantity</th>
		<th scope="col">Unit price</th>
		<th scope="col">Subtotal price</th>
		<th scope="col"></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in ViewBag.cart)
		{
			<tr data-id="@item.Product.Id">
				<td><img src="~/img/@(item.Product.Name).jpg" style="height: 30%;"></td>
				<td class="align-middle">@item.Product.Name</td>
				<td class="align-middle" style="width: 15%">
					
						<input type="text" class="form-control input-number" value="@item.Quantity" min="1" max="100">
						
				</td>
				<td class="align-middle">@item.Product.DefaultPrice @item.Product.Currency</td>
				<td class="align-middle"> <span class="sub-total" data-price="@item.Product.DefaultPrice" id="sub-@item.Product.Id">@(item.Product.DefaultPrice * item.Quantity)</span> @item.Product.Currency</td>
				<td class="align-middle"></td>
			</tr>
		}
		<tr>
			<td></td>
			<td class="align-middle"><a type="button" asp-area="" asp-controller="Product" asp-action="Index" class="btn btn-primary continue" style="float: bottom; color: white">Back to main page</a></td>
			<td class="align-middle"></td>
			<td class="align-middle">Total Price:</td>
			<td class="align-middle"> <span id="total-price">@ViewBag.total</span> @ViewBag.cart[0].Product.Currency</td>
			<td class="align-middle"></td>
		</tr>
	
	</tbody >
	<div class="container"></div>
	<div class="col-md-4 col-md-4" style="display: inline-block">
		<div class="card">
			<h5 class="card-title text-center">Your contact information</h5>
			<div class="card-body">
				<p class="card-text">@ViewBag.contact.Name</p>
				<p class="card-text">@ViewBag.contact.Email</p>
				<p class="card-text">@ViewBag.contact.Phone</p>
				<p class="card-text">@ViewBag.contact.Address</p>
				<p class="card-text">@ViewBag.contact.City</p>
				<p class="card-text">@ViewBag.contact.Zip</p>
				<p class="card-text">@ViewBag.contact.Country</p>
			</div>
		</div>
	</div>
	<div class="col-md-4 col-md-4" style="display: inline-block">
		<div class="card">
        			<h5 class="card-title text-center">Your shipping information</h5>
        			<div class="card-body">
        				<p class="card-text">@ViewBag.contact.Name</p>
        				<p class="card-text">@ViewBag.contact.ShippingAddress</p>
        				<p class="card-text">@ViewBag.contact.City</p>
        				<p class="card-text">@ViewBag.contact.Zip</p>
        				<p class="card-text">@ViewBag.contact.Country</p>
        			</div>
        		</div>
	</div>

</table >
